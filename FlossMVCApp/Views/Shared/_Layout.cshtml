<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stitchophile</title>


    <link href="/Content/metro-bootstrap.css" rel="stylesheet" />
    <link href="/Content/iconFont.css" rel="stylesheet" />
    <link href="/Content/metro-bootstrap-responsive.css" rel="stylesheet" />
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Scripts/jquery.ui.widget.js"></script>
    <script src="/Scripts/metro.min.js"></script>
    <link href="/Content/Site.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="metro">
    <nav class="navigation-bar">
        <nav class="navigation-bar-content">
            <a href="/" class="element"><i class="icon-home on-left"></i><sup>Stitchophile</sup></a>
            <span class="element-divider"></span>
            <a class="element brand" href="/Home/Index">Home</a>
            <span class="element-divider"></span>
            <a class="element brand" href="/Flosses/Index">Floss</a>
            <span class="element-divider"></span>
            <a class="element brand" href="/Companies/Index">Companies</a>
            <span class="element-divider"></span>
            <a class="element brand" href="/About/Index">About</a>
            <span class="element-divider"></span>
        </nav>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Amber Wagner</p>
        </footer>
    </div>

  @RenderSection("scripts", required: false)

</body>
</html>
