@model IEnumerable<FlossMVCApp.Models.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Companies</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "button info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CompanyId }, new { @class="button small success" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.CompanyId }, new { @class = "button small danger" })
        </td>
    </tr>
}

</table>
